<UserControl x:Class="AdapterGenerator.UserInterface.GeneratorModule.Views.GeneratorLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:AdapterGenerator.UserInterface.Converters"
             prism:ViewModelLocator.AutoWireViewModel="True">
  <UserControl.Resources>
    <ResourceDictionary>
      <converters:ListToStringConverter x:Key="ListToStringConverter" />
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <ScrollViewer Name="LogScrollViewer">
      <TextBox IsReadOnly="True" Name="LogBox"
               Text="{Binding LogMessages, Converter={StaticResource ListToStringConverter}}"
               TextWrapping="Wrap" AcceptsReturn="True"
               ScrollViewer.HorizontalScrollBarVisibility="Auto"
               ScrollViewer.VerticalScrollBarVisibility="Auto" TextChanged="LogBox_TextChanged" />
    </ScrollViewer>
  </Grid>
</UserControl>